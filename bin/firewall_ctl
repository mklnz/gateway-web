#!/usr/bin/env ruby

require_relative '../app/gateway/firewall'

def main
  action = ARGV[0]

  fw = Firewall.instance

  case action
  when 'setup'
    fw.setup
  when 'direct'
    fw.set_direct
  when 'blocked'
    fw.set_blocked
  when 'foreign'
    fw.set_foreign
  when 'global'
    fw.set_global
  when 'flush_ipset'
    fw.flush_ipset
  when 'clean'
    fw.clean
  else
    puts 'setup, direct, global, foreign, blocked, flush_ipset, clean'
  end
end

main
