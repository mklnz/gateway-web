<%= form_tag settings_path, method: :put do %>
  <label>Proxy mode
    <%= select_tag 'data[proxy_mode]',
          options_for_select(
            Setting::PROXY_MODES.map {|m| [m.to_s.humanize, m]},
            @proxy_mode
          ),
          include_blank: 'Disabled' %>
  </label>

  <label>Email
      <%= text_field_tag 'data[cns_email]', @email %>
  </label>

  <label>API Token
      <%= text_field_tag 'data[cns_token]', @token %>
  </label>

  <%= submit_tag 'Save', class: 'button' %>
<% end %>
